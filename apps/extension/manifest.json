{
  "manifest_version": 3,
  "name": "FuckWork Apply Worker",
  "version": "0.2.0",
  "description": "Human-in-the-loop job application assistant",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "*://*.myworkdayjobs.com/*",
    "*://*.myworkdaysite.com/*",
    "*://boards.greenhouse.io/*",
    "*://*.greenhouse.io/*",
    "*://jobs.lever.co/*",
    "*://*.lever.co/*",
    "*://*.icims.com/*",
    "*://candidate.icims.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/jobs/*",
        "*://*.indeed.com/viewjob*",
        "*://*.myworkdayjobs.com/*",
        "*://*.myworkdaysite.com/*",
        "*://boards.greenhouse.io/*",
        "*://*.greenhouse.io/*/jobs/*",
        "*://jobs.lever.co/*",
        "*://*.lever.co/*/jobs/*",
        "*://*.icims.com/*"
      ],
      "js": [
        "api.js",
        "ats_types.js",
        "ats_detector.js",
        "apply_stage_detector.js",
        "user_action_intent_detector.js",
        "user_guidance.js",
        "apply_state_machine.js",
        "apply_session.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

