      "pattern_value": ["\\$\\s*\\d{2,3}[,.]?\\d{0,3}\\s*[-–to]+\\s*\\$?\\s*\\d{2,3}", "\\$\\d{2,3}k\\s*[-–to]+\\s*\\$?\\d{2,3}k", "\\bsalary.{0,10}\\$\\d"],
      "data_source": "jd_text"
    },
