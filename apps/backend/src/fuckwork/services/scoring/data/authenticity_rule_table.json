{
  "version": "3.1",
  "last_updated": "2025-12-24",
  "description": "Authenticity scoring rules v3.1 - Adjusted weights for better distribution",
  "rules": [
    {
      "id": "A1",
      "name": "External recruiter phrasing",
      "description": "Posted by external recruiter (uses 'our client' language)",
      "signal": "negative",
      "weight": 0.30,
      "confidence": "high",
      "pattern_type": "regex",
      "pattern_value": ["\\bour client is\\b", "\\bour client,\\b", "\\bclient is (looking|seeking|searching)\\b", "\\bhiring on behalf of\\b"],
      "data_source": "jd_text"
    },
    {
      "id": "A2",
      "name": "Known staffing firm",
      "description": "Posted by known staffing/outsourcing firm",
      "signal": "negative",
      "weight": 0.35,
      "confidence": "high",
      "pattern_type": "string_contains_any",
      "pattern_value": ["Apex Systems", "Kforce", "Insight Global", "Robert Half", "TEKsystems", "Randstad", "Adecco", "ManpowerGroup", "Kelly Services", "Hays", "Aerotek", "Modis", "Jobot", "CyberCoders", "Lensa", "Hired", "Phyton Talent", "Crawford Thomas"],
      "data_source": "company_name"
    },
    {
      "id": "A3",
      "name": "On behalf language",
      "description": "JD indicates posting on behalf of another company",
      "signal": "negative",
      "weight": 0.22,
      "confidence": "high",
      "pattern_type": "regex",
      "pattern_value": ["\\bon behalf of\\b", "\\bwe (are|have been) (retained|engaged)\\b", "\\bconfidential.{0,20}client\\b"],
      "data_source": "jd_text"
    },
    {
      "id": "A4",
      "name": "C2C/W2/1099 terms",
      "description": "Mentions contractor payment arrangements typical of agencies",
      "signal": "negative",
      "weight": 0.20,
      "confidence": "high",
      "pattern_type": "regex",
      "pattern_value": ["\\bc2c\\b", "\\bcorp[- ]?to[- ]?corp\\b", "\\b(w2|1099)\\s*(only|or|/|and)\\s*(c2c|1099|w2)\\b"],
      "data_source": "jd_text"
    },
    {
      "id": "A5",
      "name": "Anonymous company",
      "description": "Company name is hidden or confidential",
      "signal": "negative",
      "weight": 0.22,
      "confidence": "high",
      "pattern_type": "string_equals_any",
      "pattern_value": ["Confidential", "Stealth", "Anonymous", "Undisclosed", "N/A", "Unknown"],
      "data_source": "company_name"
    },
    {
      "id": "B1",
      "name": "Very short JD",
      "description": "Job description under 200 characters - likely incomplete",
      "signal": "negative",
      "weight": 0.12,
      "confidence": "medium",
      "pattern_type": "jd_length_check",
      "pattern_value": 200,
      "data_source": "jd_text"
    },
    {
      "id": "B2",
      "name": "Short JD",
      "description": "Job description under 500 characters - limited information",
      "signal": "negative",
      "weight": 0.06,
      "confidence": "low",
      "pattern_type": "jd_length_check",
      "pattern_value": 500,
      "data_source": "jd_text"
    },
    {
      "id": "B3",
      "name": "Urgency language",
      "description": "Uses urgent/ASAP language suggesting desperation",
      "signal": "negative",
      "weight": 0.06,
      "confidence": "low",
      "pattern_type": "regex",
      "pattern_value": ["\\basap\\b", "\\burgent(ly)?\\s*(need|hiring|fill)\\b", "\\bstart immediately\\b", "\\bimmediate (start|hire)\\b"],
      "data_source": "jd_text"
    },
    {
      "id": "B4",
      "name": "Contract in title",
      "description": "Job title explicitly indicates contract position",
      "signal": "negative",
      "weight": 0.08,
      "confidence": "medium",
      "pattern_type": "regex",
      "pattern_value": ["\\bcontract(or)?\\b", "\\bc2c\\b"],
      "data_source": "title"
    },
    {
