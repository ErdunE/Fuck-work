{
  "version": "1.0",
  "last_updated": "2025-12-07",
  "description": "Authenticity scoring rules for JobBrain. 51 rules across 4 categories (Recruiter, Content, Metadata, Company).",
  "rules": [
    {
      "id": "A1",
      "name": "External recruiter phrasing",
      "description": "Posted by external recruiter (uses 'our client' language)",
      "signal": "negative",
      "weight": 0.25,
      "confidence": "high",
      "pattern_type": "regex",
      "pattern_value": ["our client", "client is looking for", "work for our client", "hiring on behalf of"],
      "data_source": "jd_text",
      "examples": [
        "Our client, a global fintech company, is looking for a Software Engineer.",
        "Client is looking for an experienced Java developer."
      ]
    },
    {
      "id": "A2",
      "name": "Known staffing firm in poster/company",
      "description": "Posted by known staffing/outsourcing firm",
      "signal": "negative",
      "weight": 0.22,
      "confidence": "high",
      "pattern_type": "string_contains_any",
      "pattern_value": [
        "Apex Systems", "Kforce", "Insight Global", "Robert Half", "Infosys",
        "Tata Consultancy", "Cognizant", "HCL Technologies", "Wipro", "Accenture",
        "TEKsystems", "Randstad", "Adecco", "ManpowerGroup"
      ],
      "data_source": "poster_info.company",
      "examples": ["Posted by Insight Global", "Company: Kforce"]
    },
    {
      "id": "A3",
      "name": "Poster hiring for many roles",
      "description": "Poster is hiring for many roles simultaneously",
      "signal": "negative",
      "weight": 0.18,
      "confidence": "medium",
      "pattern_type": "numeric_threshold",
      "pattern_value": 8,
      "data_source": "poster_info.recent_job_count_7d",
      "examples": ["Poster has 12 active job posts in the last 7 days."]
    },
    {
      "id": "A4",
      "name": "Poster with no company association",
      "description": "Poster profile has no company listed",
      "signal": "negative",
      "weight": 0.15,
      "confidence": "medium",
      "pattern_type": "boolean",
      "pattern_value": true,
      "data_source": "derived_signals.poster_no_company",
      "examples": ["LinkedIn profile shows only job title, no company."]
    },
    {
      "id": "A5",
      "name": "Recruiter title pattern",
